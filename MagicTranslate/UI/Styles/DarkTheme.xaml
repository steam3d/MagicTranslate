<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Background">#202020</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />

    <Color x:Key="Text">#FFFFFF</Color>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}" />

    <Color x:Key="Dash">#20FFFFFF</Color>
    <SolidColorBrush x:Key="DashBrush" Color="{StaticResource Dash}" />
       
    <!-- Windows 10 only see ContextMenu.cs-->
    <Color x:Key="ContextMenuBorder">#404040</Color>
    <SolidColorBrush x:Key="ContextMenuBorderBrush" Color="{StaticResource ContextMenuBorder}" />
    <SolidColorBrush x:Key="AltSystemAccentColor" Color="{StaticResource SystemAccentColorLight2}" />
    
</ResourceDictionary>